{
	"name": "task-manager-api",
	"version": "1.0.0",
	"main": "dist/server.js",
	"scripts": {
		"dev": "nodemon src/server.ts",
		"build": "tsc",
		"start": "node dist/server.js",
		"start:dev": "ts-node -r tsconfig-paths/register src/server.ts",
		"test": "jest",
		"test:watch": "jest --watch",
		"lint": "eslint src/**/*.ts",
		"lint:fix": "eslint src/**/*.ts --fix",
		"clean": "rimraf dist",
		"prebuild": "npm run clean",
		"postbuild": "copyfiles -u 1 src/**/*.json dist/"
	},
	"dependencies": {
		"bcryptjs": "^3.0.2",
		"cors": "^2.8.5",
		"dotenv": "^17.0.1",
		"express": "^4.21.2",
		"express-async-errors": "^3.1.1",
		"express-rate-limit": "^7.5.1",
		"helmet": "^8.1.0",
		"joi": "^17.13.3",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.16.1",
		"morgan": "^1.10.0",
		"winston": "^3.17.0"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.6",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.3",
		"@types/jest": "^30.0.0",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/morgan": "^1.9.10",
		"@types/node": "^24.0.10",
		"@types/supertest": "^6.0.3",
		"@typescript-eslint/eslint-plugin": "^8.35.1",
		"@typescript-eslint/parser": "^8.35.1",
		"eslint": "^9.30.1",
		"jest": "^30.0.4",
		"nodemon": "^3.1.10",
		"supertest": "^7.1.1",
		"ts-jest": "^29.4.0",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.8.3"
	},
	"keywords": [
		"nodejs",
		"typescript",
		"express",
		"task-manager",
		"api"
